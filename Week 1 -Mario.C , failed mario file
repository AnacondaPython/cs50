#include <stdio.h>
#include <stdlib.h>
#include <cs50.h>

int main (void)
{
    int height = 0;
    //int row = 0;
    printf("Input height of the pyramid ");
    scanf("%d", &height);
    if (height < 0 || height > 23)
    { 
    printf("Invalid height, less than 23, or positive");
    //return 0
    //http://i.imgur.com/VnqI7Iw.png
    exit (0);
    } 
    else
    {
        int y;
        int z;
        for (y=0; y < height; y++) 
        //skip y < height for now
        //printf("#");
        {
        //printf("#" * y)
        for (z=0; z < y; z++){
        printf("#");
        }
        printf("##\n");
        }
    }

        
    }
